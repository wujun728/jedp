<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="simpleCrud" class="org.myframework.dao.jdbc.impl.SimpleJdbcCrud">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="nativeQuery" class="org.myframework.dao.jdbc.impl.JdbcNativeQuery">
		<property name="dataSource" ref="dataSource" />
		<property name="sqlTemplate" ref="sqlTemplate" />
	</bean>

	<bean id="sqlTemplate"
		class="org.myframework.dao.sqlconfig.impl.VelocitySqlTemplate">
		<property name="sqlConfig" ref="xmlSqlConfig" />
	</bean>

	<bean id="xmlSqlConfig"
		class="org.myframework.dao.sqlconfig.impl.SqlCompositeXmlConfig">
	</bean>

	<!-- 二次开发使用 -->
	<bean id="configedJdbc"
		class="org.myframework.dao.jdbc.impl.ConfigedJdbc">
		<property name="dataSource" ref="dataSource" />
		<property name="sqlTemplate" ref="sqlTemplate" />
	</bean>

	<!-- JDBC操作 -->
	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="namedParameterJdbcTemplate"
		class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
		<constructor-arg ref="jdbcTemplate" />
	</bean>
</beans>